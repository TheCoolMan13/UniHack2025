# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=carshare_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:8081

# Google Maps API Configuration
# Use the same API key as frontend (EXPO_PUBLIC_GOOGLE_MAPS_API_KEY)
# Make sure Directions API is enabled in Google Cloud Console
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Route Matching Configuration
# Set to 'false' to use simple distance calculation instead of real routes
# Real routes are more accurate but slower (requires API calls)
USE_REAL_ROUTES=true

